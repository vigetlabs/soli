<div id="parts" class="block">
    <button class="px-4 py-2 my-2 text-white border rounded-smd bg-lavender-primary hover:bg-lavender-hover active:bg-lavender-active border-lavender-border">Post</button>

    <h1 data-controller="hello" class="py-2 text-3xl font-headline">
        Create a post
    </h1>

    <h2 class="py-1 font-headline">
        it's time to inspire
    </h2>

    <!-- Text input box -->
    <div class="flex flex-col">
        <!-- Input title -->
        <label for="post-title">Title</label>
        <!-- Text input element -->
        <input type="text" id="post-title" class="px-4 py-3 my-1 placeholder-gray-300 border border-gray-300 rounded-smd" placeholder="Title your post">
        <!-- Supporting text -->
        <p class="text-sm text-gray-300">What's your post about?</p>
    </div>

    <!-- Selectable tag (checkbox) -->
    <input type="checkbox" name="tag" id="tagA" class="hidden peer/a">
    <label for="tagA" class="items-center px-2 py-1 border border-gray-500 rounded-lg select-none peer-checked/a:bg-gray-400">tag</label>
    <input type="checkbox" name="tag" id="tagB" class="hidden peer/b">
    <label for="tagB" class="items-center px-2 py-1 border border-gray-500 rounded-lg select-none peer-checked/b:bg-gray-400">tag</label>
    
    <form>
        <select id="duration" class="w-40 px-4 py-2 my-1 placeholder-gray-300 border border-gray-300 rounded-smd">
            <option selected disabled value="1">time/duration</option>
            <option value="2">10 mins</option>
            <option value="3">30 mins</option>
            <option value="4">1 hour</option>
            <option value="5">2 hours</option>
        </select>
    </form>
</div>
