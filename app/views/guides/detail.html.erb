<%= link_to guide.author.username, user_path(guide.author) %>
<% if guide.image.attached? %>
    <%= image_tag guide.resize_attached_image %>
<% end %>
<%= guide.created_at.to_date %>
<%= guide.title %>
<%= guide.city %>
<% guide&.tags.each do |tag| %>
    <%= Guide::TAG_OPTIONS.key(tag.to_i) %>
<% end %>
<% if current_user == guide.author %>
    <p>Favorite</p>
<% else %>
    <%= button_to "Favorite", save_guide_path(guide) %>
<% end %>
<%= guide.favorited_guides.count %> Favorites

<% if guide.activities.length > 0 %>
    <ul>
        <% guide.activities.each do |activity| %>
            <li>
                <% if activity.image.attached? %>
                    <%= image_tag activity.resize_attached_image %>
                <% end %>
                <%= activity.title %>
                <%= activity.prompt %>: <%= activity.prompt_answer %>
                <%= activity.hours_to_complete %> hr. <%= activity.minutes_to_complete %> min.
            </li>
        <% end %>
    </ul>
<% end %>
