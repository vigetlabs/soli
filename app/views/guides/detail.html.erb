<% if current_user == guide.author %>
  <div class="flex justify-end mb-1">
    <%= link_to guide_path(guide), data: { turbo_method: :delete, turbo_confirm: 'Are you sure that you want to delete this guide?' } do %>
      <%= render partial: "shared/icon", locals: { icon_name: "trash", class_names: "h-8" } %>
    <% end %>
  </div>
<% end %>
<div class="container flex flex-col items-center">
  <%= render "guide_desc", guide: guide %>
  <% if guide.activities.length > 0 %>
    <div class="p-6 rounded-md bg-violet-light-primary">
      <%= render "activities/index", guide: guide %>
    </div>
  <% else %>
      <p class="mt-6 text-lg">This guide does not have any activities...</p>
  <% end %>
</div>
