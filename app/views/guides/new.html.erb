<% content_for :body_class, 'bg-violet-light-primary' %>

<div class="container flex flex-col items-center px-5 mt-20">
    <div id="title" class="flex flex-col items-center">
        <h1 class="py-1 text-4xl font-semibold font-headline">Create a Guide</h1>
        <p class="py-1 mb-5 text-lg italic font-light text-violet-dark-primary">Save memories, inspire others</p>
    </div>
    <%= form_with(model: @guide) do |form| %>
        <div class="flex flex-col" data-controller="image-preview">
            <%# Guide Title field %>
            <%= form.label "Title your Guide", class: "font-bold" %>
            <%= form.text_field :title, class: "text-input", placeholder: "e.g. Trip to New York" %>
            <%# City name field %>
            <%= form.label "City Name", class: "font-bold" %>
            <%= form.text_field :city, class: "text-input", placeholder: "e.g. New York, NY" %>
            <%# Cover photo upload %>
            <%= form.label :image, "Photo", class: "font-bold" %>
            <%= form.file_field :image, "data-image-preview-target": "uploadButton", class: "text-transparent block text-sm border border-form-primary rounded w-72 h-72", "data-action":"image-preview#setImgSrcValue" %>
        </div>
        <div class="flex items-center justify-end">
            <%= form.submit "Continue >", class: "my-2 mt-6 px-4 py-2 text-form-primary rounded bg-periwinkle-primary hover:bg-periwinkle-hover active:bg-periwinkle-active font-bold pb-2" %>
            <%# <%= render partial: "shared/icon", locals: { icon_name: "right-chevron", class_names: "" } %>
        </div>
    <% end %>
</div>

