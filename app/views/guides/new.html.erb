<div class="container flex flex-col items-center">
    <div id="title" class="container flex flex-col items-center">
        <h1 class="py-2 text-3xl font-headline">Create a Guide</h1>
        <p class="py-1 mb-5 text-lg italic font-headline">Save memories, inspire others</p>
    </div>
    <%= form_with(model: @guide) do |form| %>
        <div class="flex flex-col" data-controller="image-preview">
            <%# Guide Title field %>
            <%= form.label "Title your Guide", class: "font-bold" %>
            <%= form.text_field :title, class: "text-input", placeholder: "e.g. Trip to New York" %>
            <%# City name field %>
            <%= form.label "City Name", class: "font-bold" %>
            <%= form.text_field :city, class: "text-input", placeholder: "e.g. New York, NY" %>
            <%# Cover photo upload %>
            <%= form.label :image %>
            <%= form.file_field :image, class: "block text-sm border border-lavender-primary rounded", "data-action":"image-preview#setImgSrcValue" %>
            <%# Image preview element (hidden until image is uploaded) %>
            <%# Uses object-cover to crop image to fit to square box %>
            <img id="preview" data-image-preview-target="preview" class="hidden object-cover rounded w-72 h-72 aspect-square" alt="image upload preview"/>
        </div>
        <%= form.submit "Continue", class: "my-2 mt-6 px-4 py-2 text-white rounded bg-periwinkle-primary hover:bg-periwinkle-hover active:bg-periwinkle-active font-bold" %>
    <% end %>
</div>

