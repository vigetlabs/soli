<div class="container flex flex-col items-center">
<h1 class="py-2 text-3xl font-headline">Add Activities</h1>
<% if @guide.activities.length > 0 %>
    <ul>
        <% @guide.activities.each do |activity| %>
            <li>
                <% if activity.image.attached? %>
                    <%= image_tag activity.image.variant(resize_to_fit: [100,100]) %>
                <% end %>
                <%= activity.title %>
                <%= activity.prompt %>: <%= activity.prompt_answer %>
                <%= activity.hours_to_complete %> hr. <%= activity.minutes_to_complete %> min.
            </li>
        <% end %>
    </ul>
<% end %>

<p class="py-1 mb-5 text-md font-headline">Complete at least one activity before posting!</p>
<%= render 'activities/form' %>
</div>
