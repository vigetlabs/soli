<h3>Add a Guide</h3>

<%= form_with(model: @post) do |form| %>
    <p>
        <%= form.label :image %><br>
        <%= form.file_field :image %>
    </p>
    <p>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
    </p>
    <p>
        <%= form.label :description %><br>
        <%= form.text_area :description %>
    </p>
    <%= form.submit "Create Guide", class: "" %>
<% end %>
