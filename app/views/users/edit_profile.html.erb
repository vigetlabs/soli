<%= form_with model: user, url: user_path(user), method: :patch do |f| %>
    <div class="flex flex-row pb-8 space-x-40">
        <%= link_to "X Cancel", user, data: { turbo_confirm: 'Are you sure?' }, class: "text-periwinkle underline py-2 font-bold" %>
        <%= f.submit "Done âœ“", class: "px-4 py-2 font-bold text-form-primary border-0 rounded bg-periwinkle-primary hover:bg-periwinkle-hover active:bg-periwinkle-active" %>
    </div>

    <h1 class="py-1 text-xl font-semibold font-headline">Edit Profile</h1>

    <%= f.label :username %>
    <%= f.text_field :username, default: user.username %>
    
    <%= f.label :bio %>
    <%= f.text_field :bio, default: user.bio %>
<% end %>
